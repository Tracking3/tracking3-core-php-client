{
    "name": "tracking3/tracking3-core-php-client",
    "description": "PHP Client for Tracking3.io Core API",
    "type": "project",
    "minimum-stability": "stable",
    "license": "MIT",
    "homepage": "https://www.tracking3.io",
    "keywords": [
        "tracking3.io",
        "asset management",
        "project management"
    ],
    "support": {
        "issues": "https://github.com/Tracking3/tracking3-core-php-client/issues"
    },
    "authors": [
        {
            "name": "Martin Melzer",
            "email": "martin.melzer@tracking3.io",
            "role": "lead"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "doctrine/collections": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Tracking3\\Core\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tracking3\\Core\\ClientTest\\": "test/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
